@{
}

@model ListApp.Models.Entities.Todo

<h1>Edit Todo</h1>

@if (Model is null)
{
	<p>No todo was found with this Id</p>
}
else
{
	<form method="post">
		<div class="mt-3">
			<label class="form-label">Id</label>
			<input type="text" class="form-control" asp-for="Id" readonly />
		</div>

		<div class="mt-3">
			<label class="form-label">Title</label>
			<input type="text" class="form-control" asp-for="Title" />
		</div>

		<div class="mt-3">
			<label class="form-label">Description</label>
			<input type="text" class="form-control" asp-for="Description" />
		</div>

		<div class="mt-3">
			<input type="checkbox" id="IsCompleted" class="form-check-input" asp-for="IsCompleted">
			<label class="form-check-label" for="IsCompleted">
				Completed
			</label>
		</div>

		<div class="mt-3">
			<label class="form-label">Due Date</label>
			<input type="datetime-local" asp-for="DueDate" />
		</div>

		<div class="mt-3">
			<button type="submit" class="btn btn-primary">Save</button>
			<button type="submit" class="btn btn-danger ms-3" asp-action="SoftDelete" asp-controller="Todos">Delete</button>
		</div>
	</form>
}