@model ListApp.Models.AddTodoViewModel

<h1>Add Todo</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Title</label>
        <input type="text" class="form-control" asp-for="Title"/>
    </div>

    <div class="mt-3">
        <label class="form-label">Description</label>
        <input type="text" class="form-control" asp-for="Description" />
    </div>

    <div class="mt-3">
        <input type="checkbox" id="IsCompleted" class="form-check-input" asp-for="IsCompleted">
        <label class="form-check-label" for="IsCompleted">
            Completed (If it's already completed, and only for listing purposes)
        </label>
    </div>

    <div class="mt-3">
        <label class="form-label">Due Date</label>
        <input type="datetime-local" asp-for="DueDate" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>